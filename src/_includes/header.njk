<header class="z-50 header {% if id == "home" %} fixed {% else %} sticky {% endif %} h-20 top-0 flex items-center bg-white (dark)bg-charcoal-100 w-full">
  <y class="relative px-6 max-w-screen-xl mx-auto flex flex-row items-center justify-between w-full">

    <y class="header-left mr-2 flex-shrink-0">
      <a
        class="header-logo block"
        href="/"
        target="_self"
        rel="noopener"
        title="Yogurt CSS"
      >
        {% include "full-logo.njk" %}
        {% include "small-logo.njk" %}
      </a>
    </y>

    {% include "search.njk" %}

    <nav class="header-nav hidden (lg)flex">

      <ul class="menu flex flex-col (lg)flex-row items-center list-reset">

        <li>
          <a
            theme="auto"
            class="inline-block px-3 py-3 (hover)opacity-75 transition duration-300 ease-in-out"
            href="{{ site.urls.discord }}"
            target="_blank"
            title="Discord"
          >
            {% include "images/icons/discord.svg" %}
          </a>
        </li>

        <li>
          <a
            theme="auto"
            class="inline-block px-3 py-3 (hover)opacity-75 transition duration-300 ease-in-out"
            href="{{ site.urls.twitter }}"
            target="_blank"
            title="Twitter"
          >
            {% include "images/icons/twitter.svg" %}
          </a>
        </li>

        <li>
          <a
            theme="auto"
            class="inline-block px-3 py-3 (hover)opacity-75 transition duration-300 ease-in-out"
            href="{{ site.urls.github }}"
            target="_blank"
            title="Github"
          >
            {% include "images/icons/github.svg" %}
          </a>
        </li>

      </ul>

    </nav>

    <nav class="header-nav (lg)hidden flex">
      <ul class="menu flex flex-row items-center list-reset text-sm">

        <li>
          <a
            theme="auto"
            class="inline-block p-2 mr-1 (hover)opacity-75 transition duration-300 ease-in-out"
            href="{{ site.urls.github }}"
            target="_blank"
          >
            {% include "images/icons/github.svg" %}
          </a>
        </li>

        <li>
          <button class="menu-toggle inline-block ml-2 py-1">
            <svg
              class="fill-current text-gray-700 (dark)text-gray-400"
              viewBox="0 0 24 24"
              width="24"
              height="24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <line
                class="line1 stroke-current text-charcoal-100 (dark)text-gray-400 stroke-2"
                x1="0"
                y1="8"
                x2="24"
                y2="8"
              />
              <line
                class="line2 stroke-current text-charcoal-100 (dark)text-gray-400 stroke-2"
                x1="0"
                y1="16"
                x2="24"
                y2="16"
              />
            </svg>
          </button>
        </li>

      </ul>
    </nav>

  </y>
</header>

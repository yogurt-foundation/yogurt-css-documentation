<y class="z-20 sidebar hidden h-screen w-full lg:block xs:fixed lg:sticky lg:top-16 inset-0 pt-16 lg:pt-0 lg:pb-16 lg:-mb-16 bg-gray-100 dark:bg-charcoal-100 lg:w-1/5 lg:overflow-y-visible">
  <y class="sidebar-inner overflow-hidden h-full">
    <nav class="sidebar-scroller px-6 py-8 inset-0 text-md sm:text-sm overflow-y-auto overflow-x-hidden h-full">

      <ul class="-ml-8">

        {% for section in main.sections %}

          <li class="mb-4">

            <span class="block mb-2 xs:text-lg sm:text-xs lg:text-xs uppercase font-bold text-gray-900 dark:text-orange-600">

              {{ section.label }}

            </span>

            <ul class="-ml-8">

              {% for item in section.items %}

              {% set is_current_page = page.url | replace('/', '') == item.url | replace('/', '') %}

              <li class="mb-px">

                <a class="nav-link -mx-2 p-2 hover:font-semibold hover:underline {{ item.class }} {% if is_current_page %} selected {% endif %}"
                   href="{{ item.url | safe }}"
                   {% if is_current_page %}
                   aria-current="page"
                   {% endif %}>

                  {{ item.label }}

                  {% if item.external %}
                    <span class="exernal-link-icon">
                      {% include "images/icons/arrow-right.svg" %}
                    </span>
                  {% endif %}

                </a>

              </li>

              {% endfor %}

            </ul>
          </li>

        {% endfor %}

        {% for data in extras.more %}

          <li class="sm:block md:hidden lg:hidden mb-4">

            <span class="block mb-2 xs:text-lg sm:text-xs lg:text-xs uppercase font-bold text-gray-900 dark:text-orange-600">

              {{ data.label }}

            </span>

            <ul class="-ml-8">

              {% for item in data.items %}

              {% set is_current_page = page.url | replace('/', '') == item.url | replace('/', '') %}

              <li class="mb-px">

                <a class="nav-link -mx-2 p-2 hover:font-semibold hover:underline {{ item.class }} {% if is_current_page %} selected {% endif %}"
                   href="{{ item.url | safe }}"
                   {% if is_current_page %}
                   aria-current="page"
                   {% endif %}>

                  {{ item.label }}

                  {% if item.external %}
                    <span class="exernal-link-icon">
                      {% include "images/icons/arrow-right.svg" %}
                    </span>
                  {% endif %}

                </a>

              </li>

              {% endfor %}

            </ul>
          </li>

        {% endfor %}

        {% for section in navigation.sections %}

          <li class="mb-4">

            <span class="block mb-2 xs:text-lg sm:text-xs lg:text-xs uppercase font-bold text-gray-900 dark:text-orange-600">

              {{ section.label }}

            </span>

            <ul class="-ml-8">

              {% for item in section.items %}

              {% set is_current_page = page.url | replace('/', '') == item.url | replace('/', '') %}

              <li class="mb-px">

                <a class="nav-link -mx-2 p-2 hover:font-semibold hover:underline {{ item.class }} {% if is_current_page %} selected {% endif %}"
                   href="{{ item.url | safe }}"
                   {% if is_current_page %}
                   aria-current="page"
                   {% endif %}>

                  {{ item.label }}

                  {% if item.external %}
                    <span class="exernal-link-icon">
                      {% include "images/icons/arrow-right.svg" %}
                    </span>
                  {% endif %}

                </a>

              </li>

              {% endfor %}

            </ul>
          </li>

        {% endfor %}

      </ul>

    </nav>
  </y>
</y>
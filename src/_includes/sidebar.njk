<y class="z-20 sidebar hidden h-screen w-full (lg)block sticky (lg)top-16 inset-0 (xs)pt-0 (lg)pt-0 (lg)pt-0 (lg)pb-16 (lg)-mb-16 bg-white (dark)bg-charcoal-100 (lg)w-1/5 (lg)overflow-y-visible">
  <y class="sidebar-inner overflow-hidden h-full">

    <nav class="sidebar-scroller px-6 py-0 inset-0 text-md (sm)text-sm overflow-y-auto overflow-x-hidden h-full">

      <ul class="-ml-8">

        {% for section in main.sections %}

          <li class="mb-10">

            <span class="hidden block mb-2 text-2xl uppercase font-bold text-gray-700 (dark)text-orange-600">
              {{ section.label }}
            </span>

            <ul class="-ml-8">

              {% for item in section.items %}

              {% set is_current_page = page.url | replace('/', '') == item.url | replace('/', '') %}

              <li class="(group) mb-px">
                <a
                  class="nav-link -mx-4 px-2 py-2 text-lg (hover)font-semibold (hover)underline {{ item.class }} {% if is_current_page %} selected {% endif %} rounded-lg"
                  href="{{ item.url | safe }}"
                  target="{{ item.target }}"

                  {% if is_current_page %}
                    aria-current="page"
                  {% endif %}
                >
                  <y class="flex justify-start items-center">
                    <y>
                      {{ item.label }}
                    </y>
                    {% if item.external %}
                      <y class="external-link-icon">
                        {% include "images/icons/arrow-right.svg" %}
                      </y>
                    {% endif %}
                  </y>
                </a>
              </li>

              {% endfor %}

            </ul>
          </li>

        {% endfor %}

        {% for data in extras.more %}

          <li class="(sm)block (md)hidden (lg)hidden mb-6">

            <span class="block mb-2 text-xl uppercase font-bold text-gray-700 (dark)text-orange-600 filter saturate-4">
              {{ data.label }}
            </span>

            <ul class="-ml-8">

              {% for item in data.items %}

              {% set is_current_page = page.url | replace('/', '') == item.url | replace('/', '') %}

              <li class="mb-px">
                <a
                  class="nav-link -mx-4 p-2 (hover)font-semibold (hover)underline {{ item.class }} {% if is_current_page %} selected {% endif %} rounded-lg"
                  href="{{ item.url | safe }}"

                  {% if is_current_page %}
                    aria-current="page"
                  {% endif %}
                >
                  {{ item.label }}
                  {% if item.external %}
                    <span class="external-link-icon">
                      {% include "images/icons/arrow-right.svg" %}
                    </span>
                  {% endif %}
                </a>
              </li>

              {% endfor %}

            </ul>
          </li>

        {% endfor %}

        {% for section in navigation.sections %}

          <li class="mb-6">

            <span class="block mb-2 text-xl uppercase font-bold text-gray-700 (dark)text-orange-600 filter saturate-4">
              {{ section.label }}
            </span>

            <ul class="-ml-8">

              {% for item in section.items %}

              {% set is_current_page = page.url | replace('/', '') == item.url | replace('/', '') %}

              <li class="mb-px">
                <a
                  class="nav-link -mx-4 p-2 (hover)font-semibold (hover)underline {{ item.class }} {% if is_current_page %} selected {% endif %} rounded-lg"
                  href="{{ item.url | safe }}"

                  {% if is_current_page %}
                    aria-current="page"
                  {% endif %}
                >
                  {{ item.label }}
                  {% if item.external %}
                    <span class="external-link-icon">
                      {% include "images/icons/arrow-right.svg" %}
                    </span>
                  {% endif %}
                </a>
              </li>

              {% endfor %}

            </ul>
          </li>

        {% endfor %}

      </ul>

    </nav>
  </y>
</y>
        <y class="flex flex-gap-2 flex-col justify-start text-gray-600 (hover)text-gray-700">

          <a class="pb-2 (hover)text-gray-800 (hover)underline transition duration-200 ease-in"
             href="{{ item.url | safe }}"
             target="{{ item.target }}"
             rel="noopener"
             {% if is_current_page %}
              aria-current="page"
             {% endif %}>

            <y class="flex justify-start items-center">

              <y>{{ item.label }}</y>


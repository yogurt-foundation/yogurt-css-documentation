<y class="w-full">

  <y class="flex flex-gap-5 flex-wrap justify-center items-start">

    {% for data in panels.gettingstarted %}
      {% for item in data.panels %}

        <y class="(group) p-12 h-auto w-80 bg-transparent backdrop-filter blur-4 shadow-md (hover)shadow-lg rounded-lg">

          <y class="pb-2 text-3xl text-gray-600 (group-hover)text-orange-600 font-thin depth-tight filter saturate-4 transition duration-300 linear">

            {{ item.title }}

          </y>

          <y class="mb-6 text-xl text-gray-500 (group-hover)text-gray-600 depth-tight transition duration-300 linear">

            {{ item.desc }}

          </y>

          <a class="block px-6 py-3 text-lg text-center text-gray-600 font-semibold bg-white border-4 border-transparent (group-hover)border-gray-600 rounded-lg transition duration-300 linear"
            href="{{ item.url | safe }}"
            target="{{ item.target }}"
            rel="noopener"
            {% if is_current_page %}
            aria-current="page"
            {% endif %}>

            {{ item.button }}

          </a>
        </y>

      {% endfor %}
    {% endfor %}

  </y>
</y>